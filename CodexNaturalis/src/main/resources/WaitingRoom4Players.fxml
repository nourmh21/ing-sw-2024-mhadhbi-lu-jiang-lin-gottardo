<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>


<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.polimi.ingsw.view.GUI.waitingRoom4PlayersController"
            prefHeight="750.0" prefWidth="1100.0">
    <HBox alignment="CENTER" spacing="50.0" fx:id="imgContainer"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox alignment="CENTER">
            <ImageView fx:id="imgFirstPlayer" preserveRatio="true" fitHeight="100" fitWidth="100"/>
            <Text fx:id="nickFirstPlayer">Player 1</Text>
        </VBox>
        <VBox alignment="CENTER">
            <ImageView fx:id="imgSecondPlayer" preserveRatio="true" fitHeight="100" fitWidth="100"/>
            <Text fx:id="nickSecondPlayer">Player 2</Text>
        </VBox>
        <VBox alignment="CENTER">
            <ImageView fx:id="imgThirdPlayer" preserveRatio="true" fitHeight="100" fitWidth="100"/>
            <Text fx:id="nickThirdPlayer">Player 3</Text>
        </VBox>
        <VBox alignment="CENTER">
            <ImageView fx:id="imgFourthPlayer" preserveRatio="true" fitHeight="100" fitWidth="100"/>
            <Text fx:id="nickFourthPlayer">Player 4</Text>
        </VBox>
    </HBox>

</AnchorPane>
