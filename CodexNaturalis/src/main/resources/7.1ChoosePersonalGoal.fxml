<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.GUI.ChoosePersonalGoalController">
   <children>
      <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="580.0" prefWidth="802.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label alignment="CENTER" prefHeight="54.0" prefWidth="649.0" text="Choose your personal goal card:" textFill="#6b5339">
               <font>
                  <Font name="Arial Black" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="personalGoal1" mnemonicParsing="false" style="-fx-border-color: #6b5339; -fx-background-radius: 5; -fx-border-radius: 5;">
                     <graphic>
                        <ImageView fx:id="personal1" fitHeight="100.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                     <HBox.margin>
                        <Insets right="50.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="personalGoal2" mnemonicParsing="false" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #6b5339;">
                     <graphic>
                        <ImageView fx:id="personal2" fitHeight="100.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                  </Button>
               </children>
            </HBox>
            <Label fx:id="errorPersonalGoalLabel" alignment="CENTER" prefHeight="17.0" prefWidth="551.0" textFill="RED">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="SELECT" mnemonicParsing="false" onAction="#switchToPlayerBoard" style="-fx-border-color: #6b5339; -fx-background-radius: 5; -fx-border-radius: 5;" text="SELECT" textFill="#6b5339">
               <font>
                  <Font name="Arial Black" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
