         <children>
            <Label alignment="CENTER" prefHeight="54.0" prefWidth="649.0" text="Choose your personal goal card:" textFill="#6b5339">
               <font>
                  <Font name="Verdana" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="personalGoal1" mnemonicParsing="false" onMouseClicked="#tryGoal1" style="-fx-border-color: #6b5339; -fx-background-radius: 5; -fx-border-radius: 5;">
                     <graphic>
                        <ImageView fx:id="personal1" fitHeight="100.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                     <HBox.margin>
                        <Insets right="50.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="personalGoal2" mnemonicParsing="false" onMouseClicked="#tryGoal2" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #6b5339;">
                     <graphic>
                        <ImageView fx:id="personal2" fitHeight="100.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="30.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
