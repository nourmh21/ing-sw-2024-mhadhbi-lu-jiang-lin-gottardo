<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="1100.0" snapToPixel="false" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.GUI.connectionController">
   <children>
      <VBox alignment="CENTER" layoutX="7.0" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="7.0" AnchorPane.rightAnchor="-7.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label alignment="TOP_CENTER" contentDisplay="TOP" prefHeight="75.0" prefWidth="585.0" text="Choose the connection type:" textFill="#6b5339">
               <font>
                  <Font name="Arial Black" size="36.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Label>
            <RadioButton fx:id="rmi" contentDisplay="CENTER" mnemonicParsing="false" onAction="#getRMI" prefHeight="82.0" prefWidth="160.0" text="RMI" textFill="#6b5339">
               <toggleGroup>
                  <ToggleGroup fx:id="ConnectionType" />
               </toggleGroup>
               <font>
                  <Font name="Arial Black" size="24.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="socket" contentDisplay="CENTER" mnemonicParsing="false" onAction="#getSOCKET" prefHeight="54.0" prefWidth="158.0" text="SOCKET" textFill="#6b5339" toggleGroup="$ConnectionType">
               <font>
                  <Font name="Arial Black" size="24.0" />
               </font>
            </RadioButton>
            <HBox alignment="CENTER" prefHeight="113.0" prefWidth="1100.0">
               <children>
                  <Label prefHeight="37.0" prefWidth="53.0" text="IP:" textFill="#6b5339">
                     <font>
                        <Font name="Arial Black" size="24.0" />
                     </font>
                  </Label>
                  <TextField fx:id="tFIP" cache="true" cacheHint="SCALE" maxHeight="-Infinity" maxWidth="-Infinity" onAction="#tfIP" prefHeight="44.0" prefWidth="530.0" promptText="000.000.000.000">
                     <font>
                        <Font name="Arial" size="18.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <Label fx:id="errorIPLabel" prefHeight="30.0" prefWidth="577.0" textFill="RED">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="submit" mnemonicParsing="false" onAction="#switchToLogin" prefHeight="31.0" prefWidth="142.0" style="-fx-border-color: #6b5339; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;" text="SUBMIT" textFill="#6b5339">
               <font>
                  <Font name="Arial Black" size="24.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
